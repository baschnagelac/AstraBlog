@using AstraBlog.Enums;
@using AstraBlog.Services.Interfaces

@inject IImageService _ImageService
@inject IBlogPostService _BlogService

<!-- Start Post List  -->


<div class="row mt-3 ms-3 ">
    <div class="col-lg-12 d-flex justify-content-evenly">
        <div class="post-medium-block">
            <h1 class="m-3 align-content-center mosttitle">Most Recent Posts</h1>
            @foreach (BlogPost blogPost in (await _BlogService.GetRecentPostsAsync()).Take(4))
            {

                <partial name="_BlogCard" model="@blogPost" />
            }


        </div>
        <!-- End Post List  -->
    </div>
</div>
