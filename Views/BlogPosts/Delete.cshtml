@model AstraBlog.Models.BlogPost

@{
    ViewData["Title"] = "Delete";
}






<div class="row">
    <div class="col-12 col-md-8 offset-md-2">
        <h2>Are you sure?</h2>
        <p class="text-lead text-muted">This Blog Post will be permanently deleted.</p>
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-body">
                        <h5 class="card-title mb-3">@Model.Title</h5>
                        <div class="card-text mb-3">
                            <span class="fw-bold me-2 mb-3">Abstract:</span>@Model.Abstract
                        </div>
                        <div class="card-text">
                            <span class="fw-bold me-2 mb-3">Content:</span>@Html.Raw(Model.Content)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <form class="d-flex justify-content-between" asp-action="Delete" asp-route-id="@Model.Id">
            <input hidden asp-for="Id" />
            <a asp-action="Index" asp-controller="BlogPost" class="btn btn-outline-secondary rounded-pill btnLink">Cancel</a>
            <button type="submit" class="btn btn-danger btn-sm rounded-pill btnLink">Delete</button>
        </form>
    </div>
</div>








